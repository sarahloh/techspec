extends layout

block header
  link(rel='stylesheet', href='/css/login.css')

block content
  .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    .container
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
        a.navbar-brand(href='/') TechSpec
      .collapse.navbar-collapse
        ul.nav.navbar-nav
          li
            a(href='/') Home
  .container.main-body
    form.form-signin(action='/login', method='post')
      h2.form-signin-heading Log in to TechSpec
      input.form-control(type='email', name='email', placeholder='Email address')
      input.form-control(type='password', name='password', placeholder='Password')
      label.checkbox Remember me
        input(type='checkbox', value='remember-me') 
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Log in
      h5 Not registered?
      a(href='/signup') Sign up here
