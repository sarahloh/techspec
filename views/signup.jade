extends layout

block header
  link(rel='stylesheet', href='/css/login.css')

block content
  .navbar.navbar-inverse.navbar-fixed-top(role='navigation')
    .container
      .navbar-header
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
        a.navbar-brand(href='/') TechSpec
      .collapse.navbar-collapse
        ul.nav.navbar-nav
          li
            a(href='/') Home
  .container.main-body
    form.form-signin(action='/signup', method='post')
      h2.form-signin-heading Sign up to TechSpec
      h5 Name
      input.form-control(type='text', name='firstName', placeholder='First')
      input.form-control(type='text', name='lastName', placeholder='Last')
      h5 Login details
      input.form-control(type='email', name='email', placeholder='Email address')
      input.form-control(type='password', name='password', placeholder='Password')
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign up
      h5 Already a member?
      a(href='/login') Log in here
